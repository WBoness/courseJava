         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumber01" layoutX="30.0" layoutY="78.0" promptText="Digite o primeiro número" />
      <TextField fx:id="txtNumber02" layoutX="30.0" layoutY="117.0" promptText="Digite o segundo número" />
      <Button fx:id="btSoma" layoutX="30.0" layoutY="150.0" mnemonicParsing="false" onAction="#onBtSomaAction" text="Soma" />
      <Label layoutX="30.0" layoutY="202.0" text="Resultado =" />
      <Label fx:id="labelResult" layoutX="98.0" layoutY="202.0" prefHeight="17.0" prefWidth="82.0" />
