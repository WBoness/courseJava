package application;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Date;

/*
 *  Laço for each
 */

public class Program {

	public static void main(String[] args) throws ParseException {

		SimpleDateFormat sdf1 = new SimpleDateFormat("dd/MM/yyy HH:mm:ss");
		Date agora = new Date();
		Date daquiAPouco, diasApos = agora;
		
		System.out.println(agora);
		System.out.println(sdf1.format(agora));
		
		System.out.println("Acrescentando 4 horas...");
		// como acrescentar 4 horas
		
		Calendar cal = Calendar.getInstance(); // instancia a variável cal Tipo Calendar
		cal.setTime(agora);
		cal.add(Calendar.HOUR_OF_DAY, 4);
		daquiAPouco = cal.getTime();
		cal.add(Calendar.DAY_OF_YEAR, 7);
		diasApos=cal.getTime();
		
		System.out.println("Agora: "+ agora);
		System.out.println("daqui a 4 horas: "+ sdf1.format(daquiAPouco));
		System.out.println("Daqui a 7 dias..."+ sdf1.format(diasApos));
		}
}
